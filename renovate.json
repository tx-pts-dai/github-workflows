{
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "reviewers": ["team:DAI-Team"],
  "enabledManagers": ["github-actions"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "pinDigests": true
    }
  ]
}
